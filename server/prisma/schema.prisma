generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Registration {
  id        String             @id @default(uuid())
  fullName  String
  email     String
  phone     String
  type      String
  center    String?
  spaceType String?
  status    RegistrationStatus @default(PENDING)
  message   String?
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}


model Content {
  id        String      @id @default(uuid())
  title     Json
  body      Json
  type      ContentType
  imageUrl  String?
  published Boolean     @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model HeroSlide {
  id          String   @id @default(uuid())
  title       Json
  subtitle    String?
  description Json?
  imageUrl    String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


enum Role {
  USER
  ADMIN
  EDITOR
}

enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ContentType {
  NEWS
  EVENT
  TESTIMONIAL
  ABOUT_SECTION
}
